@model IEnumerable<SnigdhaBeautyStudio.Models.DocumentStoreEntity>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartitionKey)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentType)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.PartitionKey)

                </td>
                <td>
                    @Html.DisplayFor(model => item.DocumentName)

                </td>
                <td>
                    @Html.DisplayFor(model => item.DocumentType)

                </td>
                <td>
                    @Html.DisplayFor(model => item.RowKey)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {partitionKey = item.PartitionKey, Id = item.RowKey    })
                    @Html.ActionLink("Details", "Details", new {partitionKey = item.PartitionKey, Id = item.RowKey    })
                    @Html.ActionLink("Delete", "Delete", new {partitionKey = item.PartitionKey, Id = item.RowKey    })

                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
